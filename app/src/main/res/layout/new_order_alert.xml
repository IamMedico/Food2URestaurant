<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">
    <TextView
        android:id="@+id/order_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1 . Hot Pot 1 \n\n 2. Kway Oo 4"
        android:textColor="#000000"
        android:layout_margin="18dp"
        android:textSize="17dp"/>
    <TextView
        android:id="@+id/remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remark : မွာသည့္ အတိုင္းပဲ ဝယ္ေပးပါ "
        android:textColor="#ff0000"
        android:layout_margin="14dp"
        android:textSize="17dp"/>
<View
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:layout_margin="4dp"
    android:background="#000000"/>
    <TextView
        android:id="@+id/pick_up_time_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12 : 15 pm "
        android:gravity="center"
        android:textColor="#ff0000"
        android:textStyle="bold"
        android:textSize="23dp"/>

    <TextView
        android:id="@+id/order_code_alert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" Order Code : A123 "
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="14dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rider Contact :"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        android:textSize="17dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" ေက်ာ္ေဇာဟိန္း(09770764667)"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        android:textSize="17dp"
        android:layout_weight="0.02" />




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Order By : စုျမတ္"
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:textColor="#000000"
        android:textSize="17dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2">

    <Button
        android:text="OK"
        android:layout_width="139dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:id="@+id/button"
        android:elevation="12dp"
        android:layout_weight="1"
        android:background="#D84EF611" />

    <Button
        android:text="Reject"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_weight="1"
        android:id="@+id/button1"
        android:background="@color/colorAccent" />
    </LinearLayout>
</LinearLayout>